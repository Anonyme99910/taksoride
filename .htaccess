# TaksoRide - Root .htaccess
# Internal rewrite to server/public/ (URL stays as /hamma/)

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /hamma/
    
    # Don't rewrite if already in server/public
    RewriteCond %{REQUEST_URI} !^/hamma/server/public/
    
    # Don't rewrite if file exists in root
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Internal rewrite to server/public (no redirect, URL stays same)
    RewriteRule ^(.*)$ server/public/$1 [L]
</IfModule>
